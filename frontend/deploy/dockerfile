# Frontend Dockerfile
FROM node:22 AS build

# Set the working directory in the container
WORKDIR /app

# Copy package.json and package-lock.json (if available)
COPY ./package*.json /app/

# Install dependencies
RUN npm install

# Copy the rest of the frontend code
COPY . .

ENV PORT 3000
EXPOSE 3000

# Build the React app
CMD ["npm", "start"]
